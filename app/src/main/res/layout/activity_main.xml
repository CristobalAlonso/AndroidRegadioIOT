<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/humedadTierrTittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Humedad de la tierra"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/humedadTierr"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:foregroundGravity="center"
                android:text="0 %"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/CO2Tittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="CO2"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/CO2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:text="0 PPM"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/COTittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="CO"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/CO"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:text="0 PPM"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/humedadAmbientalTittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Humedad ambiental"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/humedadAmbiental"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:text="0 %"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/temperaturaAmbienteTittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Temperatura del ambiente"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temperaturaAmbiente"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:text="0 Â°C"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enviar"
            android:textSize="20dp"
            android:onClick="sendData"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>