<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f1f1f"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/humedadTierrTittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Humedad de la tierra"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/humedadTierr"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="0 %"
                android:textAlignment="center"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbHum"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:progressBackgroundTint="@color/white"
            android:scaleY="2"
            android:secondaryProgressTint="#72c4a6"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/CO2Tittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="CO2"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/CO2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:text="0 PPM"
                android:textAlignment="viewEnd"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbCO2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:progressBackgroundTint="@color/white"
            android:scaleY="2"
            android:secondaryProgressTint="#72c4a6"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/COTittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="CO"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/CO"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:text="0 PPM"
                android:textAlignment="viewEnd"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbCO"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:progressBackgroundTint="@color/white"
            android:scaleY="2"
            android:secondaryProgressTint="#72c4a6"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/humedadAmbientalTittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Humedad ambiental"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/humedadAmbiental"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:text="0 %"
                android:textAlignment="viewEnd"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbHumAmbient"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:progressBackgroundTint="@color/white"
            android:scaleY="2"
            android:secondaryProgressTint="#72c4a6"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/temperaturaAmbienteTittle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Temperatura del ambiente"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temperaturaAmbiente"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:text="0 Â°C"
                android:textAlignment="viewEnd"
                android:textColor="#72c4a6"
                android:textSize="20dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbTempAmbient"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:progressBackgroundTint="@color/white"
            android:scaleY="2"
            android:secondaryProgressTint="#72c4a6"
            android:visibility="visible" />

        <Switch
            android:id="@+id/sw"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:text="Regadio Automatico"
            android:textColor="#72c4a6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#72c4a6"
            android:onClick="sendData"
            android:text="Regadio manual"
            android:textColor="#1f1f1f"
            android:textSize="20dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnActivity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#72c4a6"
            android:text="Base de datos"
            android:textColor="#1f1f1f"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#72c4a6"
            android:text="Configurar"
            android:textColor="#1f1f1f"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>